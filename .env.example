# LCEngine Environment Configuration

# =============================================================================
# OpenAI Configuration
# =============================================================================

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API Base URL (optional, for custom endpoints)
# OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# Logging Configuration
# =============================================================================

# Main application log level
LOG_LEVEL=INFO

# Third-party library log levels
OPENAI_LOG_LEVEL=WARNING
URLLIB3_LOG_LEVEL=WARNING

# =============================================================================
# Application Settings
# =============================================================================

# Environment
ENVIRONMENT=development

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=text-embedding-3-small

# Chat Model Configuration
CHAT_MODEL=gpt-4.1-nano-2025-04-14
CHAT_MAX_TOKENS=500
CHAT_TEMPERATURE=0.7

# Query Rewriting Configuration
QUERY_REWRITE_MAX_TOKENS=150
QUERY_REWRITE_TEMPERATURE=0.1

# Vector Store Configuration
VECTOR_STORE_DB_PATH=data/vector_store.db
VECTOR_STORE_DIR=data/vectors
